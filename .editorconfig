root = true

[*]
indent_size = 2
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[*.conf]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[{package.json, docker-compose.yml}]
indent_style = space
indent_size = 2
